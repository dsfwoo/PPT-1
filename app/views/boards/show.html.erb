<h1>
  看板 <%= @board.title %>
  | <%= link_to "我的最愛", favorite_board_path(@board), method: 'post' %>
</h1>

<div>
  [版主：<%= display_bm(@board) %>]
</div>

<%= link_to "新增文章", new_board_post_path(@board) %>

<ul>
<% @posts.each do |post| %>
  <li>
    <%= post.display_username %>
    <%= link_to post.title, post %>
    <%= link_to "編輯", edit_post_path(post) %>
  </li>
<% end %>
</ul>